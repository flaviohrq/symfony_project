{{ include("header/headerAdmin.html.twig") }}


<a class="bg-white border-2 border-black fixed bottom-4 left-4 p-4 rounded-full cursor-pointer  transition-all	 hover:scale-125" href="http://127.0.0.1:8000/product/new">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-black " fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
    </svg>
</a>

<section class="flex justify-center">
    <div class="my-16  grid grid-cols-1 gap-4">

        {% for product in product|reverse %}
            <div class="">
                <div class="flex items-center">
                    <img  class="h-16 rounded-xl" src="{{ product.getFaceImage }}" alt"Symfony!"/>
                    <h1 class="w-60 px-4 montserrat700large" > {{ product.getName }} </h1>
                    <h2 class="w-28 pr-4 montserrat400" > {{ product.getPrice }} $ </h2>
                    <a class="text-black pr-8" href="http://127.0.0.1:8000/product/{{ product.getId }}/update">
                        <span class="material-symbols-outlined">edit</span>
                    </a>
                    <a class="text-red-600 pr-8" href="http://127.0.0.1:8000/product/{{ product.getId }}/delete">
                        <span class="material-symbols-outlined">delete</span>
                    </a>
                </div>
            </div>
        {% endfor %}

    </div>
</section>

</body>
</html>